<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %>
      | JB Boisseau</title>
    <%= csrf_meta_tags %>
    <meta name="keywords" content="<%= @seo_keywords %>">
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'blog', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= render "shared/nav", location: "top" %>

    <%= login_helper %>

    <%= yield %>
    <hr>
    <% if session[:source] %>
      <div>
        <p>thanks for visiting me from
          <%= session[:source] %></p>
      </div>
    <% end %>
  </body>
</html>
