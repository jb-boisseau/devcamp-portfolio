<div class="card">
  <tr>
    <td><%= blog.title.upcase %></td>
    <td>Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</td>
    <td>Updated <%= distance_of_time_in_words(blog.updated_at, Time.now) %> ago</td>
    <td><%= blog.body %></td>
    <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
    <td><%= link_to "Show", blog %></td>
    <td><%= link_to "Edit", edit_blog_path(blog) %></td>
    <td><%= link_to "Delete post", blog, method: :delete, data: { confirm: "Sure?" } %></td>
  </tr>
</div>
