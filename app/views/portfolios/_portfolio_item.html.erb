

  <h1><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h1>
  <h2><%= portfolio_item.subtitle %></h2>

  <p><%= portfolio_item.body %></p>

  <div><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></div>

  <p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %></p>
  <p><%= link_to 'Delete portfolio item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>
